/*아이디를 중복체크하고 회원정보를 입출력하는 프로그램*/
#include <stdio.h>
#include <string.h>

#define N 20


//회원의 아이디와 나이를 멤버로 하는 구조체
typedef struct
{
	char id[15]; //아이디
	int age; //나이
}info;


int main()
{
	info s[N];
	int choice, n=0 , i ;
	
	

	while (1)
	{

		printf("[1] 회원가입\n");
		printf("[2] 전체회원 출력 \n");
		printf("원하는 번호를 입력하시오\n");
		scanf("%d", &choice);

		if (choice == 1)
		{
			
			printf("아이디 : "); while (getchar() != '\n');  gets(s[n].id);  //gets 누락 현상 해결 >> 2015버전 이후부터 while (getchar() != '\n'); 사용
			n++;

			if (n > 1)
			{
				for (i = n; 1 < i; i--)
					if (strcmp(s[n - 1].id, s[n - i].id) == 0)
						{
							printf("아이디 중복!!\n");
							exit(1);
						}
			}

			printf("나이 : "); scanf(" %d", &s[n-1].age);
			printf("\n");
		}

		else if (choice == 2)
		{
			printf("<<전체회원 출력>> \n");

			for (i = 0; i < n; i++)
			{
				printf("id : %s , 나이 : %d\n", s[i].id, s[i].age);
			}
			break;
		}
		
		
	}
	return 0;

}
